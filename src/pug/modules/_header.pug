header.header
	.container-fluid.container
		.header__inner
			.header__logo-wrapper
				.header__logo
					a(href='./index.html')
						picture
							source(srcset="img/image/logo-header.webp" type="image/webp")
							img(src="img/image/logo-header.png" alt="img").lazyload
			.header__nav-wrapper
				.header__nav
					.header__nav-item.site-title__small
						a(href='./index.html') Home
					.header__nav-item.site-title__small
						a(href='./about.html') Про мене
					.header__nav-item.site-title__small
						a(href='./video.html') Відео
					.header__nav-item.site-title__small
						a(href='./articles.html') Статей
					.header__nav-item.site-title__small
						a(href='./photo.html') Фото
					.header__nav-item.lang-list-wrapper
						.header__lang-item._active.site-title__small
							a(href='#') UA
						.header__lang-list
							.header__lang-item.site-title__small
								a(href='#') ru
							.header__lang-item.site-title__small
								a(href='#') en
						.header__lang-ico
							include ../../img/ico/arrow-down-header-ico.svg
					.header__nav-item
						.header__search
							include ../../img/ico/search-ico.svg
				.header__menu-lang--mobile
					.header__menu-lang--mobile-item.js_lang_mobile_btn
						| UA
				.header__menu-mobile-btn
					.header__btn-menu.menu-open._active
						include  ../../img/ico/hamburger.svg