						span #UKRAINA
						span #COVID
						span #PANDEMIA
						span #KRYM
						span #UKRAINA
						span #COVID
						span #PANDEMIA
					.section-videos__video-content
						a(href='#').video-link
						.section-main-articles__article-image
							picture
								source(srcset="img/image/video/video-2.webp" type="image/webp")
								img(src="img/image/video/video-2.png" alt="img").lazyload

						.section-videos__video-date-rewiews
							p.article-date 14.10.2010
