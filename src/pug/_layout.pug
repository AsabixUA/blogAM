    // example
    //if (pageActive === "homepage")
      link(rel='stylesheet', href='./css/libs/slick.css?' + cacheFix)
      link(rel='stylesheet', href='./css/slider.css?' + cacheFix)

    link(rel='stylesheet', href='./css/libs/bootstrap-grid.css?' + cacheFix)
    link(rel='stylesheet', href='./css/libs/swiper-bundle.css?' + cacheFix)
    link(rel='stylesheet', href='./css/main.css?' + cacheFix)

  body(class="page " + pageClass)
    .page__wrapper
      include modules/_header

      main.page__content
        block content

      include modules/_footer
      include modules/_mobile-menu
      include modules/_mobile-lang
      include modules/_mobile-search

      // example
      //if (pageActive === "consolidation")
      //  include modules/_consolidations-popup

      include modules/_site-popup.pug

    block scripts
      //script(src='./js/libs/lazysizes.js')
      script(src='./js/libs/swiper-bundle.js')
      script(src='./js/validate-form.js')
      script(src='./js/main.js?' + cacheFix)
